<%- include('partials/header') %>

<section class="page-title">
  <h2>Add New Book</h2>
</section>

<div class="form-section">
  <form action="/books" method="POST" class="book-form">
    <div class="form-group">
      <label for="title">Title:</label>
      <input
        type="text"
        id="title"
        name="title"
        value="<%= book.title %>"
        required
      />
    </div>

    <div class="form-group">
      <label for="author">Author:</label>
      <input
        type="text"
        id="author"
        name="author"
        value="<%= book.author %>"
        required
      />
    </div>

    <div class="form-group">
      <label for="isbn">ISBN:</label>
      <input
        type="text"
        id="isbn"
        name="isbn"
        value="<%= book.isbn %>"
        required
      />
    </div>

    <div class="form-group">
      <label for="rating">Rating (1-5):</label>
      <input type="number" id="rating" name="rating" min="1" max="5" required />
    </div>

    <div class="form-group">
      <label for="notes">Notes:</label>
      <textarea id="notes" name="notes" rows="5"></textarea>
    </div>

    <div class="form-group">
      <label for="read_date">Date Read:</label>
      <input type="date" id="read_date" name="read_date" required />
    </div>

    <div class="cover-preview">
      <p>Book Cover Preview:</p>
      <img src="<%= coverUrl(book.isbn, 'M') %>" alt="Book Cover Preview" />
    </div>

    <button type="submit">Add Book</button>
  </form>
</div>

<%- include('partials/footer') %>
